ft("Mutually recurse", "m1,1m2,2m1,4m2,5m1,10m2,11m1,22m2,23m1,46m2,47m1,94m2,95");
MLIMIT := 100;
func mrecurse1(x int) {
    print("m1,");
    print(x);
    x += 1;
    if x < MLIMIT {
        mrecurse2(x);
    }
}
func mrecurse2(i int) {
    print("m2,");
    print(i);
    i *= 2;
    if i < MLIMIT {
        mrecurse1(i);
    }
}
mrecurse1(1);
